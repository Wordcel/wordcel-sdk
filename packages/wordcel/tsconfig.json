{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "outDir": "lib",
      "rootDir": "src",
      "baseUrl": "./",
      "declaration": true,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "noEmit": false,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": [ "node_modules","**/tests/*.spec.ts","**/tests/utils"]
  }
  